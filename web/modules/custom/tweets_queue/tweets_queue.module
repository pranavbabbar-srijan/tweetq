 */
function tweets_queue_clean_scheduled_messages_list($nids) {
  if (!is_array($nids)) {
    $nids = array($nids);
  }
  \Drupal::database()->delete(TWITTER_SCHEDULED_MESSAGES_TABLE)
      ->condition('nid', $nids, 'IN')
      ->execute();
